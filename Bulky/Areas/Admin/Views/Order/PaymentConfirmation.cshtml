@model int

<div class="container row pt-4">
    <div class="col-12 text-center">
        <h1 class="text-primary text-center">Payment Successfully!</h1>
        Order Number: @Model <br /> <br />
        <img src="~/images/lawn_leaf.jpg" width="50%" />
    </div>
    <div class="text-primary text-center">
        <br />
        <p style="color:maroon">Your Order has been placed Successfully!</p><br />
        <a asp-action="Details" asp-controller="order" asp-area="Admin" asp-route-orderId="@Model" class="btn btn-primary">Back To Order Details</a>
    </div>
</div>